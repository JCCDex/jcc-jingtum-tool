// 发行721
if (program.publish721) {
  // check receive account, token name, token id, token infos 
  if (!program.token) {
    console.log("publish token need --token name");
    process.exit();
  }
  if (!program.tokenId) {
    console.log("publish token need --tokenId");
    process.exit();
  }
  if (!program.tokenInfo) {
    console.log("publish token need --tokenInfo");
    process.exit();
  }

  const infos = JSON.parse(program.tokenInfo);
  if (!Array.isArray(infos)) {
    console.log("token info must be array.");
    process.exit();
  }
  if (!program.sign_for) {
    publish721(program.publish721, program.token, program.tokenId, infos);
  }else{
    publish721_multi_sign(program.publish721, program.token, program.tokenId, infos);
  }

  return;
}

// 发行721
if (program.transfer721) {
  // check receive account, token id 
  if (!program.tokenId) {
    console.log("transfer token need --tokenId");
    process.exit();
  }

  if (!program.sign_for) {
    transfer721(program.transfer721, program.tokenId);
  }else{
    transfer721_multi_sign(program.transfer721, program.tokenId);
  }

  return;
}

// 销毁721
