async function getPublish721Tx(account, receiver, name, id, infos) {
  const tx = Transaction.buildTransferTokenTx({
    publisher: account,
    receiver: receiver,
    token: name,
    tokenId: id
  });

  tx.setFee(10);
  const ms = [];
  if (Array.isArray(infos) && infos.length > 0) {
    for (const info of infos) {
      ms.push({
        TokenInfo: { InfoType: funcStringToHex(utf8.encode(info.type)), InfoData: funcStringToHex(utf8.encode(info.data)) }
      });
    }
  }
  if (ms.length > 0) {
    tx.tx_json.TokenInfos = ms;
  }

  return tx;
}

async function publish721_multi_sign(receiver, name, id, infos) {
  await getWalletFromKeystore();
  let tx = await getPublish721Tx(_options.wallet.address, receiver, name, id, infos);
  await _buildMultiSign(tx);
}

